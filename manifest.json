{
    "name": "Private WhatsApp Web",
    "description": "Hi! this is Shani. this extension hides/reveals whatsapp web chat list content on demand.\ncontact info: shankehat@gmail.com",
    "version": "1.0",
    "manifest_version": 3,
    "background": {},
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "Private WhatsApp Web -\nClick for options!"
    },
    "content_scripts": [
        {
            "matches": [
                "https://web.whatsapp.com/*"
            ],
            "js": [
                "script/script.js"
            ],
            "css": [
                "animations.css",
                "/script/script.css"
            ]
        }
    ],
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ]
}